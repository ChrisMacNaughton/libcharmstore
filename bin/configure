#!/bin/bash
set -x

mkdir .pip-cache
virtualenv --extra-search-dir=.pip-cache .venv-py2
virtualenv --extra-search-dir=.pip-cache -p `which python3` .venv-py3

. .venv-py2/bin/activate && \
        pip install -r test-requirements.pip --download-cache .pip-cache --find-links .pip-cache

. .venv-py3/bin/activate && \
        pip install -r test-requirements.pip --download-cache .pip-cache --find-links .pip-cache
